{
  "name": "site-template",
  "url": "https://site-template.netlify.app/",
  "version": "1.0.0",
  "description": "",
  "title": "Site Template",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon template.js",
    "build": "node template.js --build",
    "gen": "node template.js --gen",
    "update": "node lib/maintenance/update.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "chokidar": "^4.0.1",
    "concat": "^1.0.3",
    "cors": "^2.8.5",
    "cssbeautify": "^0.3.1",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "fs-extra": "^11.2.0",
    "handlebars": "^4.7.8",
    "js-beautify": "^1.15.1",
    "lorem-ipsum": "^2.0.8",
    "node-sass": "^9.0.0",
    "open-props": "^1.7.6",
    "sass": "^1.79.3",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.7",
    "xo": "^0.59.3"
  },
  "sass": {
    "_includes": [
      "/node_modules/open-props/open-props.min.css"
    ]
  },
  "xo": {
    "overrides": [
      {
        "files": "src/**/*.js",
        "envs": [
          "browser"
        ]
      }
    ],
    "ignore": [
      "src/**/*.js",
      "/public/admin/js"
    ],
    "semicolon": false,
    "space": 2,
    "rules": {
      "camelcase": "off",
      "comma-dangle": [
        "error",
        "never"
      ],
      "unicorn/prevent-abbreviations": "off",
      "import/no-unassigned-import": "off",
      "import/order": "off",
      "capitalized-comments": "off"
    }
  }
}